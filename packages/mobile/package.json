{
  "name": "@geniusqa/mobile",
  "version": "1.0.0",
  "description": "GeniusQA mobile app for remote control and notifications",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "expo start",
    "build": "expo build",
    "test": "jest",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "^0.72.0",
    "expo": "^49.0.0",
    "axios": "^1.6.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-gesture-handler": "^2.14.0",
    "@react-native-firebase/app": "^19.0.0",
    "@react-native-firebase/auth": "^19.0.0",
    "@react-native-google-signin/google-signin": "^11.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.4.0",
    "@testing-library/jest-native": "^5.4.3",
    "react-test-renderer": "^18.2.0",
    "@types/jest": "^29.5.0",
    "babel-jest": "^29.7.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": ["@testing-library/jest-native/extend-expect"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|@react-native-firebase|@react-native-google-signin|@react-native-async-storage)/)"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "testMatch": ["**/__tests__/**/*.test.(ts|tsx|js)"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  }
}
